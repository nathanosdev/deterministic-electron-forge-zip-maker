{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "lib": [
      "ES2021"
    ]
  },
  "include": ["src/**/*ts"],
}
